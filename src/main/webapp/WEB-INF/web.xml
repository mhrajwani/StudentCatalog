<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Sample Maven Web App</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/welcome.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Add</servlet-name>
    <jsp-file>/WEB-INF/addStudent.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Add</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>AddStudentServlet</display-name>
    <servlet-name>AddStudentServlet</servlet-name>
    <servlet-class>com.fdmgroup.controller.AddStudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddStudentServlet</servlet-name>
    <url-pattern>/addStudentServlet</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/WEB-INF/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>DisplayAllServlet</display-name>
    <servlet-name>DisplayAllServlet</servlet-name>
    <servlet-class>com.fdmgroup.controller.DisplayAllServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayAllServlet</servlet-name>
    <url-pattern>/displayStudent</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Search</servlet-name>
    <jsp-file>/WEB-INF/search.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>SearchStudentServlet</display-name>
    <servlet-name>SearchStudentServlet</servlet-name>
    <servlet-class>com.fdmgroup.controller.SearchStudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchStudentServlet</servlet-name>
    <url-pattern>/searchStudentServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>WELCOME</servlet-name>
    <jsp-file>/WEB-INF/welcome.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>WELCOME</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
</web-app>
